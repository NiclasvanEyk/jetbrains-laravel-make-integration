<idea-plugin>
    <id>com.niclas-van-eyk.laravel-make-integration</id>
    <name>Laravel Make Integration</name>
    <vendor email="niclas.eyk@gmail.com" url="https://github.com/NiclasvanEyk">
        Niclas van Eyk
    </vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup
                id="laravel_make_integration_notification"
                displayType="BALLOON"
                icon="/icons/laravel-logo.svg"
        />
        <toolWindow
                id="Laravel"
                factoryClass="com.niclas_van_eyk.laravel_make_integration.plugin.jetbrains.toolWindow.LaravelToolWindowFactory"
                icon="/icons/laravel-logo-for-tool-window.svg"
                anchor="bottom"
                doNotActivateOnStart="true"
        />
    </extensions>

    <actions>
        <group id="LaravelMakeGroup"
               text="Laravel"
               icon="/icons/laravel-logo.svg"
               popup="true"
               class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.groups.ArtisanMakeActionsGroup"
        >
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewDir" />
        </group>

        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.RunArtisanMakeDialogAction" id="ArtisanMakeDialogAction"/>

        <!-- We add the list of available Actions here, so they are available through the double shift menu
             and do not get filtered, when you hover over a specific folder -->
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeCastAction" id="MakeCastAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeChannelAction" id="MakeChannelAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeCommandAction" id="MakeCommandAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeComponentAction" id="MakeComponentAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeControllerAction" id="MakeControllerAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeEventAction" id="MakeEventAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeExceptionAction" id="MakeExceptionAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeFactoryAction" id="MakeFactoryAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeJobAction" id="MakeJobAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeListenerAction" id="MakeListenerAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeMailAction" id="MakeMailAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeMiddlewareAction" id="MakeMiddlewareAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeMigrationAction" id="MakeMigrationAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeModelAction" id="MakeModelAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeNotificationAction" id="MakeNotificationAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeObserverAction" id="MakeObserverAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakePolicyAction" id="MakePolicyAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeProviderAction" id="MakeProviderAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeRequestAction" id="MakeRequestAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeResourceAction" id="MakeResourceAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeRuleAction" id="MakeRuleAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeSeederAction" id="MakeSeederAction"/>
        <action class="com.niclas_van_eyk.laravel_make_integration.plugin.laravel.make.jetbrains.actions.MakeTestAction" id="MakeTestAction"/>
    </actions>
</idea-plugin>
